#include<stdio.h>

int main()

{

int i, j, k, line;

printf("请输入打印的行数：");

scanf("%d", &line);

for (i = 0; i <= (line - 1) / 2; i++)

{

for (j = 0; j <= (line - 3) / 2 - i; j++)

{

printf(" ");

}

for (k = 0; k <= 2 * i; k++)

{

printf("*");

}

printf("\n");

}

for (i = 0; i <= (line - 3) / 2; i++)

{

for (j = 0; j <= i; j++)

{

printf(" ");

}

for (k = 0; k <= line - 3 - 2 * i; k++)

{

printf("*");

}

printf("\n");

}

return 0;

}
